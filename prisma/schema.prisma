generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum NotamType {
  NEW // NOTAMN // N
  REPLACEMENT // NOTAMR // R
  CANCEL // NOTAMC // C
}

enum NotamState {
  PENDING
  APPROVED
  ARCHVIED
}

model Notam {
  id String @id
  state NotamState @default(PENDING)
  type NotamType // Doubles as the series
  summary String
  location String // A) // ICAO code will get validated by the backend.
  subject String // E) // i.e. ILS DME 'ISY' 109.9/36X RWY 07
  status String // E) // NOT AVBL
  content String? // E)
  // Could use startTime as the part after the "/" in `C60/21`. i.e. The year. 
  startTime DateTime // B) //! Ensure startTime is less than the endTime 
  endTime DateTime // C)
}
